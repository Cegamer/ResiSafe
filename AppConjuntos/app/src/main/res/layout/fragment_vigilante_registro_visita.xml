<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VigilanteRegistroVisitaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activityUserRegister">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="1000dp"
            android:layout_height="864dp"
            android:layout_marginTop="-370dp"
            app:tint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/wave" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="152dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="100dp"
                    android:layout_height="151dp"
                    app:srcCompat="@drawable/logo_blanco" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="159dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Registro de Visita"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorSecondaryLight"
                    android:textSize="28sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="315dp"
                android:layout_height="521dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:translationY="-50dp">

                <TextView
                    android:id="@+id/cedulaLabel"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:translationX="-90dp"
                    android:translationY="20dp"
                    tools:text="Cedula del visitante" />

                <TextView
                    android:id="@+id/nuevoLabel"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:translationX="130dp"
                    tools:text="Nuevo" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:backgroundTint="@color/colorSecondary"
                    android:hint="C.C"
                    android:inputType="number"
                    android:textColorHint="@color/colorPrimary"
                    app:boxBackgroundColor="@color/colorSecondary"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimary"
                    app:startIconDrawable="@drawable/ic_baseline_badge_24"
                    app:startIconTint="@color/colorPrimary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cedulaField"
                        android:layout_width="170dp"
                        android:layout_height="34dp"
                        android:layout_marginBottom="20dp"
                        android:inputType="number"
                        android:singleLine="true" />

                    <ImageButton
                        android:id="@+id/buscar1"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="100dp"
                        android:background="@drawable/fondo_redondeado"
                        android:backgroundTint="@color/colorPrimary"
                        android:contentDescription="Buscar"
                        android:src="@drawable/buscar"
                        android:translationX="172dp"
                        android:translationY="-55dp"
                        app:layout_constraintEnd_toEndOf="@id/cedulaField"
                        app:layout_constraintTop_toTopOf="@id/cedulaField"
                        app:tint="#FFFFFF" />

                    <ImageButton
                        android:id="@+id/agreagar"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="100dp"
                        android:background="@drawable/fondo_redondeado"
                        android:backgroundTint="@color/colorPrimary"
                        android:contentDescription="Buscar"
                        android:src="@drawable/anadir"
                        android:translationX="245dp"
                        android:translationY="-95dp"
                        app:cornerRadius="10dp"
                        app:layout_constraintEnd_toEndOf="@id/cedulaField"
                        app:layout_constraintTop_toTopOf="@id/cedulaField"
                        app:tint="#FFFFFF" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/visitanteNombreApellidoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre y apellido del visitante"
                    android:textColor="@color/colorPrimary" />


                <TextView
                    android:id="@+id/visitanteNombreApellidoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text=""
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/visitanteLinea"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:translationY="-10dp" />

                <TextView
                    android:id="@+id/cedulaLabel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:translationX="0dp"
                    android:translationY="-5dp"
                    tools:text="Cedula del residente" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:backgroundTint="@color/colorSecondary"
                    android:hint="C.C"
                    android:inputType="number"
                    android:textColorHint="@color/colorPrimary"
                    app:boxBackgroundColor="@color/colorSecondary"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimary"
                    app:startIconDrawable="@drawable/ic_baseline_badge_24"
                    app:startIconTint="@color/colorPrimary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cedulaField1"
                        android:layout_width="170dp"
                        android:layout_height="34dp"
                        android:layout_marginBottom="20dp"
                        android:inputType="number"
                        android:singleLine="true" />

                    <ImageButton
                        android:id="@+id/buscar"
                        android:layout_width="109dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="100dp"
                        android:background="@drawable/fondo_redondeado"
                        android:backgroundTint="@color/colorPrimary"
                        android:contentDescription="Buscar"
                        android:src="@drawable/buscar"
                        android:translationX="190dp"
                        android:translationY="-55dp"
                        app:cornerRadius="10dp"
                        app:layout_constraintEnd_toEndOf="@id/cedulaField"
                        app:layout_constraintTop_toTopOf="@id/cedulaField"
                        app:tint="#FFFFFF" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/nombreApellidoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre y apellido del residente"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/nombreApellido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text=""
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/visitanteLinea1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:translationY="-10dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apartamento Visitado"
                    android:textColor="@color/colorPrimary" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:backgroundTint="@color/colorSecondary"
                    android:hint="Apto visitado"
                    android:inputType="datetime"
                    android:textColorHint="@color/colorPrimary"
                    app:boxBackgroundColor="@color/colorSecondary"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimary"
                    app:startIconDrawable="@drawable/apartment"
                    app:startIconTint="@color/colorPrimary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/aptovisitado"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="20dp"
                        android:inputType="text"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    tools:text="Fecha y hora de ingreso" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fechaIngresoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:hint="Fecha de ingreso"
                    android:textColorHint="@color/colorPrimary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fechaIngresoEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:singleLine="true" />

                    <ImageButton
                        android:id="@+id/buttonSeleccionarFechaHora"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="100dp"
                        android:background="@drawable/fondo_redondeado"
                        android:backgroundTint="@color/colorPrimary"
                        android:contentDescription="Seleccionar"
                        android:src="@drawable/calendario"
                        android:translationX="170dp"
                        android:translationY="-48dp"
                        app:layout_constraintEnd_toEndOf="@id/fechaIngresoLayout"
                        app:layout_constraintTop_toTopOf="@id/fechaIngresoLayout"
                        app:tint="@android:color/white" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/horaIngresoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Hora de ingreso"
                    android:textColorHint="@color/colorPrimary"
                    android:translationY="-10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/horaIngresoEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="time"
                        android:singleLine="true" />

                    <ImageButton
                        android:id="@+id/buttonSeleccionarFechaHora2"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="100dp"
                        android:background="@drawable/fondo_redondeado"
                        android:backgroundTint="@color/colorPrimary"
                        android:contentDescription="Seleccionar"
                        android:src="@drawable/calendario"
                        android:translationX="170dp"
                        android:translationY="-48dp"
                        app:layout_constraintEnd_toEndOf="@id/horaIngresoLayout"
                        app:layout_constraintTop_toTopOf="@id/horaIngresoLayout"
                        app:tint="@android:color/white" />


                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:translationY="-10dp">


                    <Button
                        android:id="@+id/cancelButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/colorPrimaryDanger"
                        android:padding="15dp"
                        android:text="Cancelar"
                        app:cornerRadius="10dp" />

                    <Button
                        android:id="@+id/registerButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:padding="15dp"
                        android:text="Registrar"
                        app:cornerRadius="10dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="1000dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="-500dp"
            android:background="@drawable/wave_foreground"
            android:backgroundTint="@color/colorPrimary"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"></LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>