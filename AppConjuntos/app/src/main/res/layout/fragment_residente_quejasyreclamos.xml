<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityUserRegister">

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="1000dp"
        android:layout_height="864dp"
        android:layout_marginTop="-370dp"
        app:tint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wave" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="152dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100dp"
                android:layout_height="151dp"
                app:srcCompat="@drawable/logo_blanco" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quejas o reclamos"
                android:textAlignment="textStart"
                android:textColor="@color/colorSecondaryLight"
                android:textSize="28sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="405dp"
            android:orientation="vertical">
            <Spinner
                android:id="@+id/complaint_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp" />

            <EditText
                android:id="@+id/complaint_text"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_margin="16dp"
                android:hint="Explicanos tu queja"
                android:inputType="textMultiLine"
                android:minLines="6" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <Button
                android:id="@+id/regresar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:padding="15dp"
                android:text="REGRESAR"
                android:translationX="-10dp"
                android:translationY="0dp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/enviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:padding="15dp"
                android:text="ENVIAR QUEJA"
                android:translationY="0dp"
                app:cornerRadius="10dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="1000dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="-500dp"
        android:background="@drawable/wave_foreground"
        android:backgroundTint="@color/colorPrimary"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
