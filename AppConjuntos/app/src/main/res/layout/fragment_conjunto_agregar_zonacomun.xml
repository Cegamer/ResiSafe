<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".conjuntoAgregarZonacomunFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="1000dp"
            android:layout_height="864dp"
            android:layout_marginTop="-430dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/wave"
            app:tint="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="1000dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="-580dp"
            android:background="@drawable/wave_foreground"
            android:backgroundTint="@color/colorPrimary"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"></LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/profile_selector_background"
            android:gravity="center"
            android:padding="5dp"
            android:text="Agregar Zona Comun"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorSecondary"
            android:hint="Nombre"
            android:inputType="number"
            android:textColorHint="@color/colorPrimary"
            app:boxBackgroundColor="@color/colorSecondary"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/colorPrimary"
            app:hintTextColor="@color/colorPrimary"
            app:startIconDrawable="@drawable/park"
            app:startIconTint="@color/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:inputType="number"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:id="@+id/textViewApertura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horario de Apertura"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layoutApertura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/editTextApertura"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp
"
                android:background="@drawable/profile_selector_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="00:00:00"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"/>


            <Button
                android:id="@+id/buttonApertura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:text="Seleccionar"
                android:textColor="@color/BackgroundColor"
                app:cornerRadius="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewCierre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horario de Cierre"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layoutCierre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextCierre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:hint="Cierre"
                android:inputType="none"
                android:textColor="@color/text_primary" />

            <Button
                android:id="@+id/buttonCierre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="Seleccionar"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewAforoMaximo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aforo Máximo"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextAforoMaximo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Aforo Máximo"
            android:inputType="number"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/textViewPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio"
            android:inputType="number"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/textViewIntervaloTurnos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intervalo de Turnos (minutos)"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextIntervaloTurnos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Intervalo de Turnos"
            android:inputType="number"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/buttonGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/button_primary"
            android:padding="12dp"
            android:text="Guardar"
            android:textColor="@android:color/white" />
    </LinearLayout>


</FrameLayout>