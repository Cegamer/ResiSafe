<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/tarjetaPerfil3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:orientation="horizontal"
        android:padding="16dp"
        tools:ignore="DuplicateIds">

        <LinearLayout
            android:id="@+id/tarjetaPerfil2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            android:orientation="horizontal"
            android:padding="16dp"
            android:translationY="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tarjetaPerfil"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/historialvisitas"
                app:tint="@color/colorPrimary" />


            <LinearLayout
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textoNombreUsuario2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre y apellido"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/Cedula2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cedula"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:translationX="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/conjunto"
                            app:tint="@color/colorPrimary" />


                        <TextView
                            android:id="@+id/textoTorre2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Torre"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_home_24"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/textoApto2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Apto"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/tarjetaPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:orientation="horizontal"
        android:padding="16dp"
        tools:ignore="DuplicateIds">

        <!-- Coloca todos los elementos que están dentro de tu tarjeta aquí -->

    </LinearLayout>

</LinearLayout>
